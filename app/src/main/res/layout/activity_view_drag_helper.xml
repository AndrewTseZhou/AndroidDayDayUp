<?xml version="1.0" encoding="utf-8"?>
<com.andrewtse.testdemo.view_drag_helper.VDHLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/root_vdh"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingTop="10dp"
  android:paddingBottom="30dp"
  android:paddingLeft="15dp"
  android:paddingRight="20dp"
  android:fitsSystemWindows="true"
  android:orientation="vertical"
  tools:context=".activity.ViewDragHelperActivity">

  <TextView
    android:id="@+id/child1"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    android:layout_gravity="center"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:text="CommonDragView" />

  <TextView
    android:id="@+id/child2"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    android:layout_gravity="center"
    android:background="@color/colorAccent"
    android:gravity="center"
    android:text="AutobackView" />

  <TextView
    android:id="@+id/child3"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    android:layout_gravity="center"
    android:background="@android:color/holo_red_dark"
    android:gravity="center"
    android:text="EdgeTrackerView" />

</com.andrewtse.testdemo.view_drag_helper.VDHLinearLayout>